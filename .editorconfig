# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# YAML files
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Batch files
[*.{bat,cmd}]
end_of_line = crlf

# Makefiles
[Makefile]
indent_style = tab

# Docker files
[Dockerfile*]
indent_style = space
indent_size = 4

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# HTML, CSS, JavaScript
[*.{html,htm,css,js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# SQL files
[*.sql]
indent_style = space
indent_size = 2

# Configuration files
[*.{ini,toml,cfg,conf}]
indent_style = space
indent_size = 4

# Git configuration
[.git{attributes,config,modules,ignore}]
indent_style = space
indent_size = 4

# Editor specific files
[.vscode/*]
indent_style = space
indent_size = 2

# Python specific rules
[*.{pyi,pyd,pyw}]
indent_style = space
indent_size = 4

# Templates
[*.{html,htm,xml}]
indent_style = space
indent_size = 2

# Documentation
[*.{rst,md,markdown,mdx}]
trim_trailing_whitespace = false

# Tests
[*/tests/*.py]
indent_size = 4

# Scripts
[scripts/*.py]
indent_size = 4

# Configs
[setup.cfg]
indent_style = space
indent_size = 4

# Requirements files
[requirements*.txt]
indent_style = space
indent_size = 4

